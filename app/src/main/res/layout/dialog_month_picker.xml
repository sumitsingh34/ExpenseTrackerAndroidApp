<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Year Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnPrevYear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous year"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2024"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnNextYear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next year"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/primary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_hint" />

    <!-- Month Grid -->
    <GridLayout
        android:id="@+id/monthGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="3">

        <TextView
            android:id="@+id/monthJan"
            style="@style/MonthPickerItem"
            android:text="Jan" />

        <TextView
            android:id="@+id/monthFeb"
            style="@style/MonthPickerItem"
            android:text="Feb" />

        <TextView
            android:id="@+id/monthMar"
            style="@style/MonthPickerItem"
            android:text="Mar" />

        <TextView
            android:id="@+id/monthApr"
            style="@style/MonthPickerItem"
            android:text="Apr" />

        <TextView
            android:id="@+id/monthMay"
            style="@style/MonthPickerItem"
            android:text="May" />

        <TextView
            android:id="@+id/monthJun"
            style="@style/MonthPickerItem"
            android:text="Jun" />

        <TextView
            android:id="@+id/monthJul"
            style="@style/MonthPickerItem"
            android:text="Jul" />

        <TextView
            android:id="@+id/monthAug"
            style="@style/MonthPickerItem"
            android:text="Aug" />

        <TextView
            android:id="@+id/monthSep"
            style="@style/MonthPickerItem"
            android:text="Sep" />

        <TextView
            android:id="@+id/monthOct"
            style="@style/MonthPickerItem"
            android:text="Oct" />

        <TextView
            android:id="@+id/monthNov"
            style="@style/MonthPickerItem"
            android:text="Nov" />

        <TextView
            android:id="@+id/monthDec"
            style="@style/MonthPickerItem"
            android:text="Dec" />
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        android:textColor="@color/text_secondary" />

</LinearLayout>
